<CustButton@Button>:
    font_size: 30
    background_normal:''
    background_color:[10/255,45/255,0,1]  
    color:[1,1,1,1]

<SignButton@Button>:
    font_size: 30
    background_normal:''
    background_color:[1,1,0,1]  
    color:[0,0,0,1]

<myGridLayout>:
    id:ca
    display:entry
    rows: 5
    padding: 5
    spacing: 5
    BoxLayout:
        TextInput:
            id: entry
            font_size: 45
            multiline: True
            foreground_color:[1,0,0,1]
    BoxLayout:
        CustButton:
            text: "1"
            on_press:entry.text+=self.text
        CustButton:
            text: "2"
            on_press:entry.text+=self.text
        CustButton:
            text: "3"
            on_press:entry.text+=self.text
        SignButton:
            text: "+"
            on_press:entry.text+=self.text

    BoxLayout:
        CustButton:
            text: "4"
            on_press:entry.text+=self.text
        CustButton:
            text: "5"
            on_press:entry.text+=self.text
        CustButton:
            text: "6"
            on_press:entry.text+=self.text
        SignButton:
            text: "-"
            on_press:entry.text+=self.text

    BoxLayout:
        CustButton:
            text: "7"
            on_press:entry.text+=self.text
        CustButton:
            text: "8"
            on_press:entry.text+=self.text
        CustButton:
            text: "9"
            on_press:entry.text+=self.text
        SignButton:
            text: "*"
            on_press:entry.text+=self.text
    BoxLayout:
        CustButton:
            text: "C"
            on_press:entry.text=""
        CustButton:
            text: "0"
            on_press:entry.text+=self.text
        CustButton:
            text: "="
            on_press: ca.doit(entry.text)

        SignButton:
            text: "/"
            on_press:entry.text+=self.text
